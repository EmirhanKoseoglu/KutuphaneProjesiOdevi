@model IEnumerable<LibraryMS.Models.BorrowRecord>

@{
    ViewData["Title"] = "Gelen Siparişler";
}

<div class="container-fluid">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h3 class="fw-bold text-primary mb-0">
                <i class="fa-solid fa-truck-ramp-box me-2"></i>Gelen Siparişler
            </h3>
            <span class="badge bg-primary fs-6 mt-2">Toplam: @Model.Count()</span>
        </div>
        <div class="col-md-6">
            <form asp-action="Orders" method="get">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fa-solid fa-magnifying-glass text-muted"></i>
                    </span>
                    <input type="text" name="searchTerm" class="form-control border-start-0 ps-0" 
                           placeholder="Kullanıcı adı, isim veya soyisim ara..." 
                           value="@ViewData["CurrentSearch"]">
                    <button class="btn btn-primary px-3" type="submit">ARA</button>
                    @if (!string.IsNullOrEmpty(ViewData["CurrentSearch"] as string))
                    {
                        <a asp-action="Orders" class="btn btn-outline-secondary" title="Temizle">
                            <i class="fa-solid fa-xmark"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="bg-light text-primary border-bottom">
                        <tr>
                            <th class="py-3 ps-4">Sipariş Tarihi</th>
                            <th class="py-3">Kitap</th>
                            <th class="py-3">Alıcı Bilgileri</th>
                            <th class="py-3">İletişim</th>
                            <th class="py-3" style="width: 30%;">Adres</th>
                            <th class="py-3 text-center">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-nowrap">
                                    <i class="fa-regular fa-calendar me-1 text-muted"></i>
                                    @item.LoanDate.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if(item.Book != null) {
                                            <div>
                                                <div class="fw-bold">@item.Book.Title</div>
                                                <small class="text-muted">ID: @item.BookId</small>
                                            </div>
                                        } else {
                                            <span class="text-danger">Kitap Silinmiş</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold"><i class="fa-solid fa-user me-1 text-secondary"></i> @item.FirstName @item.LastName</div>
                                    <small class="text-muted">Kullanıcı: @(item.User?.UserName ?? "Bilinmiyor")</small>
                                </td>
                                <td>
                                    <div class="text-nowrap"><i class="fa-solid fa-phone me-1 text-success"></i> @item.PhoneNumber</div>
                                </td>
                                <td>
                                    <small class="d-block text-wrap">@item.Address</small>
                                </td>
                                <td class="text-center">
                                    @if(item.ReturnDate == null)
                                    {
                                        <span class="badge bg-warning text-dark"><i class="fa-solid fa-clock me-1"></i> Bekliyor/Gönderildi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success"><i class="fa-solid fa-check me-1"></i> Tamamlandı</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="fa-solid fa-box-open fa-3x mb-3"></i>
                    <p>Henüz hiç sipariş bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>
</div>
