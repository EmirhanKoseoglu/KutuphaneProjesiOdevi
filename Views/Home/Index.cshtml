@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="p-5 mb-4 bg-white rounded-3 shadow-sm border">
    <div class="container-fluid py-2">
        <h1 class="display-5 fw-bold text-primary">Kütüphanene Hoş Geldin! <i class="fa-solid fa-book-open ms-2"></i></h1>
        <p class="col-md-8 fs-5 text-muted">
            Binlerce kitap, yüzlerce yazar ve sınırsız bilgi dünyası parmaklarının ucunda. 
            Kitaplarını yönet, ödünç al ve okuma serüvenini takip et.
        </p>
        
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg px-4 fw-bold shadow-sm">
                Giriş Yap <i class="fa-solid fa-arrow-right-to-bracket ms-2"></i>
            </a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-lg px-4 ms-2">
                Kayıt Ol
            </a>
        }
        else
        {
             <a asp-controller="Book" asp-action="Index" class="btn btn-primary btn-lg px-4 fw-bold shadow-sm">
                Kitapları Keşfet <i class="fa-solid fa-magnifying-glass ms-2"></i>
            </a>
        }
    </div>
</div>

<div class="row g-4 mb-5">
    
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 py-2">
            <div class="card-body d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                    <i class="fa-solid fa-book fa-2x text-primary"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0">Toplam Kitap</h6>
                    <h2 class="fw-bold mb-0">@ViewBag.BookCount</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 py-2">
            <div class="card-body d-flex align-items-center">
                <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                    <i class="fa-solid fa-pen-nib fa-2x text-success"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0">Yazarlar</h6>
                    <h2 class="fw-bold mb-0">@ViewBag.AuthorCount</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 py-2">
            <div class="card-body d-flex align-items-center">
                
                @if (User.IsInRole("Admin"))
                {
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                        <i class="fa-solid fa-users fa-2x text-warning"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0">Kayıtlı Üyeler</h6>
                        <h2 class="fw-bold mb-0">@ViewBag.MemberCount</h2>
                    </div>
                }
                else if (User.Identity.IsAuthenticated)
                {
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3">
                        <i class="fa-solid fa-bookmark fa-2x text-info"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0">Okuduğun Kitaplar</h6>
                        <h2 class="fw-bold mb-0">@ViewBag.MyBooksCount</h2>
                    </div>
                }
                else
                {
                    <div class="bg-secondary bg-opacity-10 p-3 rounded-circle me-3">
                        <i class="fa-solid fa-clock fa-2x text-secondary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0">Çalışma Saatleri</h6>
                        <h5 class="fw-bold mb-0">09:00 - 18:00</h5>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white fw-bold py-3">
                <i class="fa-solid fa-star text-warning me-2"></i> Neden Biz?
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border-0"><i class="fa-solid fa-check text-success me-2"></i> Binlerce ücretsiz kaynak</li>
                    <li class="list-group-item border-0"><i class="fa-solid fa-check text-success me-2"></i> 15 gün ödünç alma süresi</li>
                    <li class="list-group-item border-0"><i class="fa-solid fa-check text-success me-2"></i> Online takip sistemi</li>
                    <li class="list-group-item border-0"><i class="fa-solid fa-check text-success me-2"></i> Sessiz çalışma ortamı</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100 bg-primary text-white" style="background: linear-gradient(45deg, #0d6efd, #0a58ca);">
            <div class="card-body p-5 text-center d-flex flex-column justify-content-center">
                <h3>Aradığın Kitabı Bulamadın mı?</h3>
                <p class="mb-4">Kütüphane sorumlumuz ile iletişime geçerek talepte bulunabilirsin.</p>
                <a href="mailto:admin@kutuphane.com" class="btn btn-light fw-bold text-primary">
                    <i class="fa-solid fa-envelope me-2"></i> İletişime Geç
                </a>
            </div>
        </div>
    </div>
</div>