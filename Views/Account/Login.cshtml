@model LibraryMS.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5">
        <div class="card border-0 shadow-lg top-border-accent">
            <div class="card-header bg-white border-0 text-center pt-5 pb-3">
                <div class="mb-3">
                    <i class="fa-solid fa-book-open-reader fa-3x" style="color: var(--primary-color);"></i>
                </div>
                <h2 class="fw-bold" style="color: var(--primary-color);">Hoş Geldiniz</h2>
                <p class="text-muted">Kütüphane hesabınıza erişin</p>
            </div>
            <div class="card-body p-5 pt-0">
                <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Email" class="text-muted">Email Adresi</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifre" />
                        <label asp-for="Password" class="text-muted">Şifre</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label text-muted" asp-for="RememberMe">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        @* <a href="#" class="small text-decoration-none" style="color: var(--secondary-color);">Şifremi Unuttum?</a> *@
                    </div>

                    <div class="d-grid gap-2">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg py-3 fw-bold" style="border-radius: 50px;">
                            Giriş Yap
                        </button>
                    </div>

                    <div class="text-center mt-4 text-muted small">
                        Hesabınız yok mu? 
                        <a asp-controller="Account" asp-action="Register" class="fw-bold text-decoration-none" style="color: var(--secondary-color);">
                            Hemen Kayıt Olun
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
