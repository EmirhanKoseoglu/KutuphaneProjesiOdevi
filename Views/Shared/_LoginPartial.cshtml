@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fa-solid fa-user-circle me-1"></i> @User.Identity.Name
        </a>
    </li>
    <li class="nav-item">

        <form  class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-outline-danger btn-sm ms-2 mt-1">
                <i class="fa-solid fa-right-from-bracket"></i> Çıkış
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary btn-sm mt-1 ms-2 px-3 text-white" asp-controller="Account" asp-action="Login">Giriş Yap</a>
    </li>
}
</ul>