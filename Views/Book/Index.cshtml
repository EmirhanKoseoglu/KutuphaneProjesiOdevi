@model IEnumerable<LibraryMS.Models.Book>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<div class="container-fluid">
    
    <div class="row mb-4 align-items-center">
        
        <div class="col-md-3">
            <h3 class="fw-bold text-primary mb-0">
                <i class="fa-solid fa-book me-2"></i>Kitaplar
            </h3>
        </div>

        <div class="col-md-6">
            <form asp-controller="Book" asp-action="Index" method="get">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fa-solid fa-magnifying-glass text-muted"></i>
                    </span>
                    <input type="text" name="searchTerm" class="form-control border-start-0 ps-0 py-2" 
                           placeholder="Kitap adı, yazar veya kategori ara..." 
                           value="@ViewData["CurrentSearch"]">
                    <button class="btn btn-primary px-4 fw-bold" type="submit">ARA</button>
                    
                    @if (!string.IsNullOrEmpty(ViewData["CurrentSearch"] as string))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary" title="Temizle">
                            <i class="fa-solid fa-xmark"></i>
                        </a>
                    }
                </div>
            </form>
        </div>

        <div class="col-md-3 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success py-2 shadow-sm">
                    <i class="fa-solid fa-plus-circle me-1"></i> Yeni Kitap
                </a>
            }
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-light text-primary border-bottom">
                    <tr>
                        <th class="py-3 ps-4" style="width: 100px;">Kapak</th>
                        <th class="py-3">Kitap Adı</th>
                        <th class="py-3">Yazar</th>
                        <th class="py-3">Kategori</th>
                        <th class="py-3 text-center">Fiyat</th>
                        <th class="py-3 text-center">Sayfa</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th class="py-3 text-center">Stok</th>
                        }
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <th class="py-3 text-end pe-4">İşlemler</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="bottom" title="Özet" data-bs-content="@(string.IsNullOrEmpty(item.Description) ? "Açıklama bulunmuyor." : item.Description)">
                            <td class="ps-4">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="~/images/@item.ImageUrl" class="img-thumbnail border-0 shadow-sm" style="height: 80px; width: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center border rounded" style="height: 80px; width: 60px;">
                                        <i class="fa-solid fa-image text-muted fa-lg"></i>
                                    </div>
                                }
                            </td>
                            <td class="fw-bold">@item.Title</td>
                            <td>
                                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3">
                                    <i class="fa-solid fa-user-pen me-1"></i>
                                    @if(item.Author != null) { @item.Author.Name } else { <span>Belirtilmemiş</span> }
                                </span>
                            </td>
                            <td>
                                @if(item.Category != null)
                                {
                                    <span class="text-muted"><i class="fa-solid fa-tag me-1"></i> @item.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">@item.Price.ToString("N2") TL</td>
                            <td class="text-center">@item.PageCount</td>

                            @if (User.IsInRole("Admin"))
                            {
                                <td class="text-center">
                                    @if(item.Stock > 0)
                                    {
                                        <span class="badge bg-success">@item.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Tükendi (0)</span>
                                    }
                                </td>
                            }

                            @if (User.Identity.IsAuthenticated)
                            {
                                <td class="text-end pe-4">
                                    
                                    @* DURUM 1: Eğer Kullanıcı ADMİN ise -> Düzenle ve Sil Görünür *@
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1" title="Düzenle">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    }
                                    @* DURUM 2: Eğer Kullanıcı STANDART ÜYE ise -> Ödünç Al Görünür *@
                                    else
                                    {
                                        if (item.Stock > 0)
                                        {
                                            <a asp-controller="Borrow" asp-action="Create" asp-route-bookId="@item.Id" 
                                               class="btn btn-sm btn-info text-white fw-bold shadow-sm">
                                                <i class="fa-solid fa-truck me-1"></i> Ödünç Al (Eve Teslim)
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-secondary text-white fw-bold shadow-sm" disabled>
                                                <i class="fa-solid fa-ban me-1"></i> Stok Tükendi
                                            </button>
                                        }
                                    }

                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="fa-solid fa-box-open fa-3x mb-3"></i>
                    <p>Aradığınız kriterde kitap bulunamadı.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl)
        })
    </script>
}